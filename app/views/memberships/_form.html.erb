<%= simple_form_for membership, url: memberships_path, method: :post do |f| %>
  <%= f.input :interests, as: :text,
              required: true,
              autofocus: true,
              label: 'What kind of topics would you like to discuss at events?' %>

  <%= f.hidden_field :user_id %>

  <%= f.hidden_field :group_id %>

  <%= f.submit 'Join group' %>
<% end %>