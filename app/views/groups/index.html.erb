<div class="page-block">
  <%= @groups.each do |group| %>
    <h5 class="title is-5 has-text-weight-bold"><%= link_to group.name, group_path(group) %></h5>
    
    <div class="columns is-gapless subtitle is-size-7 has-text-weight-medium">      
      <div class="column is-narrow">
        <p><i class="fas fa-map-marker-alt notice"></i><br>
        <i class="fas fa-user-friends notice"></i></p>
      </div>

      <div class="column">
        <p><%= city_state(group) %><br>
        <%= count_users(group) %></p>        
      </div>
    </div>

    <p><%= group.description %></p>
    <!-- <%= creator_options(group) %> -->
    
    <hr>
  <% end %>
</div>