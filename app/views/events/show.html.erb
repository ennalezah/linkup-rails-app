<section class="hero is-medium is-light">
  <div class="hero-body memberships">
    <div class="container">
      <h1 class="title is-size-1-tablet has-text-weight-bold">
        Memberships
      </h1>
    </div>
  </div>
</section>

<div class="page-block">
  <h3><%= @event.name %></h3>
  <p><%= @event.details %></p>
  <p><%= date(@event) %></p>
  <p><%= start_end_time(@event) %></p>
  <p><%= @event.location %> | <%= city_state(@event) %></p>
  <p>Organizer: <%= organizer_name(@event) %></p>

  <hr>

  <h3><%= pluralize(@users.count, 'Attendee')%></h3>
  <% @users.each do |user| %>
    <%= link_to user.name, user_path(user) %>
  <% end %>

  <%= rsvp(@event) %>

  <%= organizer_options(@event) %>
</div>