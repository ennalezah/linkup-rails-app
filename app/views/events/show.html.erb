<div class="content">
  <h3><%= @event.name %></h3>
  <p><%= @event.details %></p>
  <p><%= @event.start_date %></p>
  <p><%= @event.end_date %></p>
  <p><%= @event.location %> | <%= city_state(@event) %></p>

  <hr>

  <p><%= link_to 'Edit', edit_event_path(@event) %> | <%= link_to 'Delete', event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" } %></p>
</div>