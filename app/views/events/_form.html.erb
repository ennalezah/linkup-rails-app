<%= simple_form_for event do |f| %>
  <%= f.input :name,
              required: true,
              autofocus: true,
              label: 'Event name' %>

  <%= f.input_field :group_id,
                    collection: Group.all,
                    required: true,
                    prompt: 'Select hosting group' %>

  <%= f.input_field :organizer,
                    collection: User.all,
                    required: true,
                    prompt: 'Select event organizer' %>

  <%= f.input :details,
              as: :text,
              required: true,
              placeholder: 'Add event info here that you think members should know about' %>

  <%= f.input :date,
              required: true,
              label: 'Date' %>

  <%= f.input :start_time,
              required: true,
              label: 'Start time (24-hr format)' %>

  <%= f.input :end_time,
              required: true,
              label: 'End time (24-hr format)' %>

  <%= f.input :location,
              required: true,
              label: 'Address or location name' %>

  <%= f.input :city,
              required: true %>

  <%= f.input_field :state,
                    collection: states,
                    required: true,
                    prompt: 'State' %>

  <%= f.submit %>
<% end %>