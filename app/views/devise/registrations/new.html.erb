<section class="hero is-light is-bold">
  <div class="hero-body signup">
    <div class="container">
      <div class="columns is-vcentered">

        <div class="column is-one-third form-block">
          <h4 class="title is-4 is-spaced has-text-bold">Create your account</h4>
          <p class="subtitle is-7">Fields marked with <span class="notice">*</span> are required</p>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
            <%= f.error_notification %>
            
            <div class="field">
              <label class="label">Name<span class="notice">*</span></label>
              <div class="control">
                <%= f.input :name,
                            required: true,
                            autofocus: true,
                            label: false,
                            placeholder: "Name",
                            wrapper: false,
                            input_html: { class: "input" } %>
              </div>
            </div>

            <div class="field">
              <label class="label">Email<span class="notice">*</span></label>
              <div class="control">
                <%= f.input :email,
                            required: true,
                            label: false,
                            placeholder: "example@domain.com",
                            wrapper: false,
                            input_html: { autocomplete: "email", class: "input" } %>
              </div>
            </div>

            <div class="field">
              <label class="label">Password<span class="notice">*</span></label>
              <div class="control">
                <%= f.input :password,
                            required: true,
                            label: false,
                            wrapper: false,
                            input_html: { autocomplete: "new-password", class: "input" } %>
              </div>
              <p class="help"><%= "Minimum of #@minimum_password_length characters" if @minimum_password_length %></p>
            </div>

            <div class="field">
              <label class="label">Password confirmation<span class="notice">*</span></label>
              <div class="control">
                <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        wrapper: false,
                        input_html: { autocomplete: "new-password", class: "input" } %>
              </div>
            </div> 

            <div class="field">
              <div class="control">
                <%= f.button :submit, "Sign up", class:'button is-fullwidth cta has-text-white has-text-weight-medium'  %>
                <span class="help is-size-7 has-text-centered">Already have an account? <%= link_to 'Log in.', new_user_session_path %></span>
              </div>
            </div>
          <% end %>
          
          <p class="breaker is-size-7 is-spaced has-text-centered has-text-weight-bold">----- OR -----</p>

          <button class="button is-fullwidth"><img src="https://img.icons8.com/color/100/000000/google-logo.png" width="22px" class="google-icon"><%= link_to "Sign up with Google", user_google_oauth2_omniauth_authorize_path %></button>

          <!-- <%= render "devise/shared/links" %> -->
        </div>
      </div> <!-- end of columns -->     
    </div> <!-- end of container -->  
  </div> <!-- end of hero-body -->  
</section>

